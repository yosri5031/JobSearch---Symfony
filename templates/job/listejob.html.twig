{{ form_end(form) }}
<h2> Liste des jobs | <small> <a href="{{ path('ajouter_job')}}" > Ajouter </a> </h1>
</small></h2>
{% for msg in app.flashes('notice') %}
<div class="alert alert-success">
{{ msg }}
</div>
{% endfor %}

<table class="table table-hover table-striped" border="1">
<thead>
<tr>
<th> # </th>
<th> Type </th>
<th> Company</th>
<th> Description</th>
<!--<th> Date d'expiration</th>-->
</tr>
</thead>
<tbody>
{% for job in lesJobs %} 
<tr>
<td> {{ job.id}} </td>
<td> {{ job.Company | upper}} </td>
<td> {{ job.Description }} </td>
<td>
<a class="btn btn-primary" href="#"> Voir </a>
<a class="btn btn-danger" href="{{ path('edit_job', {'id':job.id }) }}"
onclick="return confirm('Are you sure to modify{{ job.id }}')">Modifier</a>
<a class="btn btn-danger" href="{{ path('job_delete', {'id':job.id }) }}"
onclick="return confirm('Are you sure to delete Job num {{ job.id }} !')">Supprimer</a>
</td>
</tr>
{% else %}
<tr>
<td colspan="5"> Aucun abonn√© </td>
</tr>
{% endfor %}
</tbody>
</table>
{% endblock %}